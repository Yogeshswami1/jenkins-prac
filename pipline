pipeline {
    agent any

    environment {
        GIT_CREDENTIALS_ID = 'github'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git credentialsId: "${GIT_CREDENTIALS_ID}", url: 'https://github.com/Yogeshswami1/jenkins-prac.git', branch: 'main'
            }
        }

        stage('Docker Compose Down (Clean up)') {
            steps {
                script {
                    echo "üßπ Stopping any existing containers..."
                    sh 'docker-compose down || true'
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    echo "üê≥ Building Docker images..."
                    sh 'docker-compose build --no-cache'
                }
            }
        }

        stage('Deploy to AWS') {
            steps {
                script {
                    echo "üöÄ Deploying to AWS EC2..."
                    sh 'docker-compose up -d'
                }
            }
        }

        stage('Verify Services') {
            steps {
                script {
                    echo "üîç Checking running containers..."
                    sh 'docker ps'
                }
            }
        }
    }

    post {
        failure {
            echo "‚ùå Build failed. Please check the logs."
        }
        success {
            echo "‚úÖ Deployment successful. All systems go!"
        }
    }
}
